---
  let oldal = Astro.request.url.pathname.substring(1);
---

<style>
a[aria-current='page'] {
  @apply border-b-2 border-teal-accent-100;
}
</style>

<nav
  class="bg-white w-full h-auto mx-auto flex flex-col items-center py-2 gap-4"
>
  <div class="w-max h-full bg-white flex px-2">
    <a href="/"><img src="/logo.svg" alt="" /></a>
  </div>
  <div class="w-5/6 h-full bg-white flex flex-row justify-center gap-3">
    <a
      aria-current={Astro.request.url.pathname === '/szolgaltatasok' ? 'page' : undefined}
      href="/szolgaltatasok"
      class="szolgaltatasok text-xs font-semibold text-szurke-logo"
      >SZOLGÁLTATÁSOK</a
    >
    <a
      aria-current={Astro.request.url.pathname === '/kapcsolat' ? 'page' : undefined}
      href="/kapcsolat"
      class="kapcsolat text-xs font-semibold text-szurke-logo">KAPCSOLAT</a
    >
    <a
      aria-current={Astro.request.url.pathname === '/kedvezmenyek' ? 'page' : undefined}
      href="/kedvezmenyek"
      class="kedvezmenyek text-xs font-semibold text-szurke-logo"
      >KEDVEZMÉNYEK</a
    >
  </div>
</nav>